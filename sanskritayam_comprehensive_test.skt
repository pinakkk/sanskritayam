# sanskritayam_comprehensive_test.skt

# Recursion udaharanam
paribhasha factorial(n):
    yadi n nyoonam 2:
        pratyahar 1
    pratyahar n gunanam factorial(n - 1)

# Conditional statements udaharanam
paribhasha test_conditionals(a, b):
    yadi a adhikam b:
        mudrit("a is adhikam than b")
    athavayadi a nyoonam b:
        mudrit("a is nyoonam than b")
    anyatha:
        mudrit("a is tulyam to b")

# Looping constructs udaharanam
paribhasha test_loops():
    mudrit("krte loop:")
    krte i antargatam range(5):
        mudrit(i)

    mudrit("yavat loop:")
    i samam 0
    yavat i nyoonam 5:
        mudrit(i)
        i samam i yogah 1

# List manipulation udaharanam
paribhasha test_lists():
    fruits samam ["apple", "banana", "cherry"]
    mudrit("Original list:", fruits)

    fruits.append("orange")
    mudrit("After appending:", fruits)

    fruits.remove("banana")
    mudrit("After removing:", fruits)

    mudrit("Length of list:", len(fruits))

# Dictionary manipulation udaharanam
paribhasha test_dictionaries():
    person samam {"name": "John", "age": 30, "city": "New York"}
    mudrit("Original dictionary:", person)

    person["occupation"] samam "Engineer"
    mudrit("After adding key-value pair:", person)

    del person["city"]
    mudrit("After deleting key-value pair:", person)

    mudrit("Keys in dictionary:", person.keys())

# Exception handling udaharanam
paribhasha test_exceptions():
    prayatnah:
        x samam 10 bhagaharah 0
        mudrit("Result:", x)
    apavadah ZeroDivisionError:
        mudrit("Cannot divide by zero!")
    antatah:
        mudrit("Exception handling complete.")

# File I/O udaharanam
paribhasha test_file_io():
    file_name samam "test_file.txt"
    content samam "This is a test file."

    # Writing to file
    with open(file_name, "w") as file:
        file.write(content)

    # Reading from file
    with open(file_name, "r") as file:
        mudrit("File content:", file.read())

# Object-oriented programming udaharanam
vargah Person:
    paribhasha __init__(self, name, age):
        self.name samam name
        self.age samam age

    paribhasha introduce(self):
        mudrit("My name is", self.name, "and I am", self.age, "years old.")

paribhasha test_oop():
    person1 samam Person("Alice", 25)
    person2 samam Person("Bob", 30)

    person1.introduce()
    person2.introduce()

# Main function
paribhasha main():
    mudrit("Testing Sanskritayam language features:")

    mudrit("\nFactorial udaharanam:")
    mudrit("Factorial of 5 is:", factorial(5))

    mudrit("\nConditional statements udaharanam:")
    test_conditionals(5, 3)
    test_conditionals(3, 5)
    test_conditionals(5, 5)

    mudrit("\nLooping constructs udaharanam:")
    test_loops()

    mudrit("\nList manipulation udaharanam:")
    test_lists()

    mudrit("\nDictionary manipulation udaharanam:")
    test_dictionaries()

    mudrit("\nException handling udaharanam:")
    test_exceptions()

    mudrit("\nFile I/O udaharanam:")
    test_file_io()

    mudrit("\nObject-oriented programming udaharanam:")
    test_oop()

# Run the main function
main()
